{
  "name": "melius-operarius",
  "version": "0.1.0",
  "description": "An open-source AI agent with local Ollama models instead of external APIs",
  "main": "index.js",
  "bin": {
    "melius-operarius": "./index.js",
    "install-melius": "./bin/install-and-setup.js"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:quick": "node test-quick.js",
    "setup": "node install.js",
    "setup-wizard": "node index.js setup-wizard",
    "postinstall": "node scripts/postinstall.js",
    "deploy": "node scripts/deploy.js",
    "build": "npm run build:docker",
    "build:docker": "docker build -f Dockerfile.prod -t melius-operarius:latest .",
    "docker:run": "docker run -p 3000:3000 melius-operarius:latest"
  },
  "keywords": [
    "ai",
    "agent",
    "ollama",
    "openclaw",
    "local-ai",
    "privacy",
    "open-source"
  ],
  "author": "Aras",
  "license": "MIT",
  "dependencies": {
    "ollama": "^0.5.0",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "configstore": "^6.0.0",
    "commander": "^11.0.0",
    "glob": "^10.3.10",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  }
}