{
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "cors": {
      "origin": "*",
      "credentials": true
    },
    "rateLimiting": {
      "windowMs": 900000,
      "max": 100,
      "message": "Too many requests from this IP."
    }
  },
  "ollama": {
    "host": "http://localhost:11434",
    "defaultModel": "llama3",
    "timeout": 60000,
    "keepAlive": "5m"
  },
  "logging": {
    "level": "info",
    "file": "./logs/app.log",
    "maxSize": "20m",
    "maxFiles": "14d"
  },
  "plugins": {
    "enabled": [],
    "directory": "./plugins",
    "timeout": 30000
  },
  "security": {
    "apiKeyRequired": false,
    "allowedOrigins": ["*"],
    "maxUploadSize": "10mb"
  },
  "database": {
    "enabled": false,
    "type": "sqlite",
    "path": "./data/melius-operarius.db"
  },
  "cache": {
    "enabled": true,
    "ttl": 3600,
    "maxSize": 1000
  }
}